<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">

    <appenders>
        <File name="AllMessage" fileName="logs/allMessage.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Filters>
                <ThresholdFilter level="info"  />
            </Filters>
        </File>
        <File name="WarnMessage" fileName="logs/warnMessage.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Filters>
                <ThresholdFilter level="warn"  />
            </Filters>
        </File>
        <File name="ErrorMessage" fileName="logs/errorMessage.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Filters>
                <ThresholdFilter level="error"  />
            </Filters>
        </File>
    </appenders>

    <loggers>
        <root level="debug">
            <appender-ref ref = "AllMessage" />
            <appender-ref ref="WarnMessage" />
            <appender-ref ref="ErrorMessage" />
        </root>
    </loggers>

</configuration>
